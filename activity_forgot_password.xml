<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword"
    android:background="@drawable/lolpkc"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/exitforgotpassword"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="150dp"

        app:srcCompat="@drawable/exit2" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="50dp"
        android:textStyle="italic"
        android:textColor="#E72F18"
        android:layout_height="wrap_content"
        android:text="@string/death_time"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="90dp"
        android:textSize="30dp"
        android:textStyle="italic"
        android:textColor="#88CDE7"
        android:layout_height="wrap_content"
        android:text="FORGOT PASSWORD?"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="#3AA59A"
        android:layout_height="wrap_content"
        android:text="EMAIL DAAL DO LINK BHYJTY HAIN"/>
    <EditText
        android:id="@+id/editemailreset"
        android:layout_marginTop="100dp"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:background="#665B6948"
        android:hint="@string/email"/>
    <Button
        android:layout_width="199dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:id="@+id/editButtonreset"
        android:text="RESET PASSWORD"/>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="18dp"
        android:textStyle="italic"
        android:layout_marginTop="120dp"
        android:textColor="#C7A53F"
        android:layout_height="wrap_content"
        android:text="Still can't do it Loser?"/>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="#E1EEF0"
        android:layout_height="wrap_content"
        android:text=" Help!!!"
        />


</LinearLayout>