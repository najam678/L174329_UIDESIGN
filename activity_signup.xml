<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/dok"
    android:padding="30dp"
  >

    <TextView
        android:layout_width="wrap_content"
        android:textSize="50dp"
        android:textStyle="italic"
        android:textColor="#650000"
        android:layout_height="wrap_content"
        android:text="@string/register_here"/>

    <EditText
        android:id="@+id/registerusername"
        android:layout_marginTop="150dp"
        android:layout_width="210dp"
        android:layout_height="40dp"


        android:hint="@string/username"/>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registerpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="210dp"
            android:layout_height="39dp"
            android:inputType="textPassword"
            android:hint= "password" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registerpass1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="210dp"
            android:layout_height="39dp"
            android:inputType="textPassword"
            android:hint= "confirm password" />

    </com.google.android.material.textfield.TextInputLayout>


    <EditText
        android:id="@+id/edittextemail1"
        android:layout_width="210dp"
        android:layout_marginTop="20dp"
        android:layout_height="40dp"

        android:hint="@string/email"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#650000"
        android:text="Agree with all terms and conditions" />
    <Button
        android:layout_width="199dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:id="@+id/editButtonRegiter1"
        android:text="@string/register"/>

    <TextView
        android:id="@+id/alreadyregister"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_marginTop="20dp"
        android:textColor="#650000"
        android:layout_height="wrap_content"
        android:text="@string/already_have_an_account"/>


</LinearLayout>