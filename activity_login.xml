<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/loginbackground"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <ImageView
        android:layout_width="332dp"
        android:layout_height="216dp"
        android:layout_marginTop="50dp"

        app:srcCompat="@drawable/pic3" />

    <EditText
        android:id="@+id/edittextuserame"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:textColorHint="#964127"
        android:textColor="#83321B"
        android:hint="@string/username" />

    <EditText
        android:id="@+id/edittextpassword"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:textColor="#83321B"
        android:textColorHint="#964127"
        android:hint="@string/password"/>


    <TextView
        android:id="@+id/editforgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textStyle="bold"

        android:textColor="#606"
        android:text="@string/forgot_password"/>



    <Button
        android:layout_width="199dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:id="@+id/editButtonLogin"
        android:text="@string/LOGIN"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"

    android:orientation="horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="#709878"
        android:layout_height="wrap_content"
        android:text="@string/not_registered"/>

    <TextView
        android:id="@+id/edittextRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#709878"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:text="@string/register"/>

</LinearLayout>